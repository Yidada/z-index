@import 'nib';
@import 'const'
@import "mixin"
@import "typo"
@import "sweetalert.css"
@import "google.css"

body
  position relative
  all()

@font-face {
  font-family: 'iconfont';
  src: url('//at.alicdn.com/t/font_1469523993_5552719.eot'); /* IE9*/
  src: url('//at.alicdn.com/t/font_1469523993_5552719.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */ url('//at.alicdn.com/t/font_1469523993_5552719.woff') format('woff'), /* chrome、firefox */ url('//at.alicdn.com/t/font_1469523993_5552719.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/ url('//at.alicdn.com/t/font_1469523993_5552719.svg#iconfont') format('svg'); /* iOS 4.1- */
}

.iconfont
  font-family "iconfont"
  font-size 16px;
  font-style normal

/* =======loading ========= */

@keyframes loadingBack
  0% {
    background-position: 0 0;
  }
  25% {
    background-position: 0 0;
  }
  26% {
    background-position: 20px -20px;
  }
  50% {
    background-position: 20px -20px;
  }
  51% {
    background-position: 40px -40px;
  }
  75% {
    background-position: 40px -40px;
  }
  76% {
    background-position: 60px -60px;
  }
  99% {
    background-position: 60px -60px;
  }
  100% {
    background-position: 0 0;
  }

@keyframes spanShow
  from
    opacity 0
  to
    opacity 1

@keyframes pureLoading
  0%
    transform rotate(0deg)
    transform-origin 50% 50%
  50%
    transform rotate(180deg)
    transform-origin 50% 50%
  100%
    transform rotate(360deg)
    transform-origin 50% 50%

.loading
  //none()
  position fixed
  z-index 10
  left 0
  top 0
  width 100%
  height 100%
  background-color $backgroundColor
  transition all 1s ease-in-out
  .content
    position absolute
    width 200px
    height 200px
    left 50%
    top 50%
    transform translate(-50%, -50%)
    &.pure
      background url("../img/circle.png") no-repeat
      background-size contain
      //animation pureLoading .5s infinite linear
  h1
    position absolute
    top 50%
    left 50%
    width 500px
    text-align center
    transform translate(-50%, 100px)
    color #ffffff
    font-size 22px
    font-weight bold
    text-transform uppercase
    span
      opacity 0
      for row in (1..5)
        &:nth-child({row})
          animation spanShow 1s row * .5s + .5s forwards ease-in-out

.shape-contain
  position absolute
  top 50%
  left 50%
  width 100px
  height 100px
  for row in (1..30)
    &:nth-child({row})
      transform translate(-50%, -50%) rotate(row * 12 deg)
      .shape
        width 100%
        height 100%
        background-color darken($redColor, row * 2% + 16%);
        -webkit-clip-path polygon(0 10.2%, 50% 50%, 10.2% 0%)
        clip-path polygon(0 10.2%, 50% 50%, 10.2% 0%)
        fun-shapeColor(row)

@media (max-width: 1200px)
  .loading
    display none

/* =======header ========= */

#menu-outer
  width 100%
  background $backgroundColor
  clearfix()

#menu-inner
  fun-container()
  a
    color $redColor
    font-weight bold
    text-decoration none
    line-height 60px
    float left
    position relative
    width 100px
    text-align center
    &:hover
      background $blackColor
      transition background .3s ease-in-out
    .logo
      position absolute
      font-size 30px
      line-height 60px
      top 0
      left 0
      width 120px
      background $backgroundColor

/*===========content=========*/
#content-outer
  all()
  top 60px

#content-inner
  all()

#recent-posts
  all()
  height inherit
  background #f1f1f1
.recent-post-item
  display none

.front-post
  display block !important
  box-sizing border-box
  all()
  background #3c3f41
  .recent-post-parm
    z-index 5
    position absolute
    width 700px
    height 150px
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    line-height 50px
    color $redColor
    h2
      font-size 20px
      font-weight bold
      color $redColor
    a
      display block
      text-decoration none
      font-size 50px
      font-weight bold
      background url('../img/repeat-white.png') center center repeat
      background-size 80px 60px
      background-clip text
      -webkit-text-fill-color transparent
      animation scratchy 0.253s linear forwards infinite
      &.pure
        background none
        -webkit-text-fill-color none
        background-clip none
    time
      font-size 15px

@keyframes scratchy
  0% {
    background-position: 0 0;
  }
  25% {
    background-position: 0 0;
  }
  26% {
    background-position: 20px -20px;
  }
  50% {
    background-position: 20px -20px;
  }
  51% {
    background-position: 40px -40px;
  }
  75% {
    background-position: 40px -40px;
  }
  76% {
    background-position: 60px -60px;
  }
  99% {
    background-position: 60px -60px;
  }

.border
  height: 100%;
  width: 100%;
  position: absolute;
  top 0
  left 0
  z-index 4
  > div
    height 100%
    width 100%
    position absolute

  .frames
    div
      background: url('../img/border.svg') repeat-x 50% 50%;
      width: 100%;
      height: 20px;
      position: absolute;
      left: 0;
      top: 0;
    // @include animation(bordermovement .14s infinite linear);
    & div:nth-child(2), & div:nth-child(4)
      width 20px
      height 100%
      background url('../img/border-vert.svg') repeat-y 50% 50%

    & div:nth-child(3)
      bottom 0
      top auto

    & div:nth-child(3), & div:nth-child(4)
      transform rotate(179.99deg)

    & div:nth-child(4)
      right 0
      left auto

/*=============post content==============*/
#post, #archive, #tag, .content
  width 80%
  margin 20px auto

/*===========pagination======*/
#pagination
  position fixed
  right 0
  top 50%
  transform translate(0, -50%)

.post-pagin
  z-index 5
  position absolute
  right 70px
  top 50%
  width 50px
  transform translate(0, -50%)
  li
    display block
    font-size 20px
    font-weight bold
    text-align center
    color $whiteColor
    a
      text-decoration none
    i
      font-size 40px
      color $blackColor
      line-height 50px
      transition 0.3s linear

.pre-post, .next-post
  transform rotate(-90deg)

.pre-post:hover, .next-post:hover
  i
    font-size 45px

/*===========footer==========*/
#bottom-outer
  position fixed
  width 100%
  height 50px
  bottom 0
  left 0
  text-align center
  text-transform capitalize
  color $redColor
  text-shadow 0px 1px 2px $blackColor
